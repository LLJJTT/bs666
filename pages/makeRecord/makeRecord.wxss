/* 自我价值拉动 */
.tab_bar{
	/* background: #000; */
	position: relative;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-top: 40rpx;
}
.low{
	font-size: 28rpx;
	color: #7d7d7d;
	position: absolute;
	left: 40rpx;
	display: inline-block;

}
.top{
	font-size: 28rpx;
	color: #7d7d7d;
	position: absolute;
	right: 40rpx;
	display: inline-block;
}
.pull_bar{
	width: 350rpx;
	height: 24rpx;
	border-radius: 40rpx;
	display: inline-block;
	position: relative;
}
.bar{
	width: 36rpx;
	height: 50rpx;
	vertical-align: middle;
}

/* 保存按钮 */
.save{
	width: 100%;
	height: 98rpx;
	background: #02b7fe;
	color: #ffffff;
	font-size: 32rpx;
	text-align: center;
	line-height: 98rpx;
	margin-top: 80rpx;
	border-radius: 0;
}
.save::after {
    border-radius:0;
}
.active{
	color: #dd6f72;
	border:1rpx solid #dd6f72;
}

/* 滑动bar */
.bar_content{
	width: 350rpx;
	display: inline-block;
	position: relative;
}
.bg_box{
	width: 350rpx;
	display: inline-block;
	position: absolute;
}
.bar_left{
	width: 30rpx;
	height: 25rpx;
	border-radius: 40rpx 0 0 40rpx;
	background: #64bc8e;
	display: inline-block;
	position: relative;
}
.bar_right{
	width: 320rpx;
	height: 25rpx;
	border-radius:0 40rpx 40rpx 0;
	background: #fff;
	border:1px solid #dadada;
	border-left: none;
	display: inline-block;
	position: relative;
}
.core{
	display: inline-block;
	position: relative;
	top: -19rpx;
}
.core_son{
	position: absolute;
